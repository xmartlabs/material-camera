<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.afollestad.materialcamera.internal.CameraVideoPlayer
        android:id="@+id/playbackView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_icon_preview_play"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_30"
        android:layout_alignParentBottom="true"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="24dp"
        >

        <com.afollestad.materialcamera.PlaybackVideoFrameSelectorView
            android:id="@+id/selectorView"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_below="@id/selectorView"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/useVideoButton"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_below="@id/selectorView"
            android:layout_alignParentEnd="true"
            android:text="@string/use_video"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>
